# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# NextAuth (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
AUTH_SECRET="generate-with-openssl-or-node-crypto"

# NextAuth URL (set to your production domain, e.g., https://pln-tracker.company.com)
NEXTAUTH_URL="http://localhost:3000"

# MinIO/S3 Configuration (for file uploads)
# Development (local MinIO)
S3_ENDPOINT="http://minio:9000"
S3_PUBLIC_ENDPOINT="http://localhost:9000"
S3_IMAGE_HOSTNAME="localhost"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET_NAME="plnprojecttracker"
S3_REGION="us-east-1"
S3_USE_SSL="false"

# Production (uncomment and use AWS S3 or other S3-compatible service)
# S3_ENDPOINT=""  # Leave empty for AWS S3
# S3_ACCESS_KEY="your-aws-access-key"
# S3_SECRET_KEY="your-aws-secret-key"
# S3_BUCKET_NAME="plnprojecttracker-prod"
# S3_REGION="ap-southeast-1"
# S3_USE_SSL="true"

# Optional: Cloud Storage (for production file uploads)
# AWS_S3_BUCKET=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="ap-southeast-1"

# Optional: Cloudinary (alternative for file uploads)
