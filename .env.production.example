# Production Environment Variables
# Copy this file to .env in production server

# Database Configuration
DB_USER=plnuser
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_PLN2026
DB_NAME=plnprojecttracker
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# NextAuth Configuration
AUTH_SECRET=GENERATE_RANDOM_SECRET_HERE_USE_OPENSSL
# Generate with: openssl rand -base64 32
NEXTAUTH_URL=https://your-domain.plniconplus.com

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@plniconplus.com
PGADMIN_PASSWORD=CHANGE_THIS_PGADMIN_PASSWORD

# Application Settings
NODE_ENV=production
PORT=3000

